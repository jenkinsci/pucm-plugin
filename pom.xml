<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jvnet.hudson.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.373</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>PUCM</artifactId>
  <version>0.2.9</version>
  <name>PUCM</name>
  <description>Integrates Jenkins to ClearCase UCM</description>
  <url>http://wiki.jenkins-ci.org/display/JENKINS/Pucm+plugin</url>
  <packaging>hpi</packaging>
  
  <repositories>
    <repository>
      <id>praqma-repo</id>
      <url>http://code.praqma.net/repo/maven/</url>
    </repository>
  </repositories>

  <distributionManagement>
   <repository>
    <id>maven.jenkins-ci.org</id>
    <url>http://maven.jenkins-ci.org:8081/content/repositories/releases/</url>
   </repository>
  </distributionManagement>

  <developers>
    <developer>
      <name>Christian Wolfgang</name>
    </developer>
    <developer>
      <name>Troels Selch</name>
    </developer>
    <developer>
      <name>Margit Bennetzen</name>
    </developer>
    <developer>
      <name>Lars Kruse</name>
      <email>pucm@praqma.net</email>
    </developer>
  </developers>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <goals>deploy</goals><!--because plugin is built against version before 1.387-->
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
  	
    <dependency>
      <groupId>net.praqma</groupId>
      <artifactId>COOL</artifactId>
      <version>0.2.6</version>
		<type>jar</type>
      <scope>compile</scope>
    </dependency>

  </dependencies>
    
  <scm>
    <connection>scm:git:ssh://github.com/jenkinsci/pucm-plugin.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/jenkinsci/pucm-plugin.git</developerConnection>
    <url>https://github.com/jenkinsci/pucm-plugin</url>
  </scm>

</project>